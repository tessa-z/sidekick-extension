{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Gemini for Chrome+",
  "description": "New tabs a mess? Use Gemini for Chrome+!",
  "action": {
      "default_title": "Gemini for Chrome+"
  },
  "permissions": [
    "sidePanel",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "js/service-worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "js/index.html"
  }
}